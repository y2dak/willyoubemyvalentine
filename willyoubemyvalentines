<body>
  <div class="container">
    <h1 id="question">Will you be my Valentine, Yatin? üíò</h1>

    <!-- Beggy puppy eyes -->
    <img
      id="gif"
      src="https://media.giphy.com/media/v6aOjy0Qo1fIA/giphy.gif"
      alt="Puppy eyes begging"
    />

    <div class="buttons">
      <button id="yesBtn">Yes üíï</button>
      <button id="noBtn">No üòê</button>
    </div>
  </div>

  <script>
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const gif = document.getElementById("gif");
    const question = document.getElementById("question");

    // NO button runs away while spinning
    noBtn.addEventListener("mouseover", () => {
      const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
      const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);

      noBtn.style.left = `${x}px`;
      noBtn.style.top = `${y}px`;
    });

    // YES button celebration
    yesBtn.addEventListener("click", () => {
      question.textContent = "YAYYYY üíñü•π Best Valentine ever!";
      gif.src = "https://media.giphy.com/media/26xBwdIuRJiAIqHwA/giphy.gif";
      document.querySelector(".buttons").style.display = "none";
    });
  </script>
</body>
